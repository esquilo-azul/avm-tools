default: &default
  adapter: %%DATABASE.SYSTEM%%
  pool: 40
  timeout: 5000
  encoding: unicode
  username: %%DATABASE.USERNAME%%
  password: %%DATABASE.PASSWORD%%
  host: %%DATABASE.HOSTNAME%%
  port: %%DATABASE.PORT%%

development:
  <<: *default
  database: %%DATABASE.NAME%%

production:
  <<: *development

test:
  <<: *default
  database: %%DATABASE.NAME%%_test
